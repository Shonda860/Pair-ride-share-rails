<h2 class="title">All Drivers listed here:</h2>
<p class="subtitle">Click on a driver name to view the passenger details:</p>
<% if @drivers.length > 0 %>
  <ul>
    <% @drivers.each do |driver| %>
    <li><%= link_to driver.name, driver_path(driver.id) %>    
    <%= link_to "Edit", edit_driver_path(driver.id) %> |
        <%= link_to "Delete", driver_path(driver.id), method: :delete, data: { confirm: "Are you sure?" } %> </li> 
     <% end %>
     </ul>
     <% else %>
        <h2>No Drivers in system</h2>
<% end %>
<%= link_to "Back to All Passengers", passengers_path %>
