<h2>index<h2>

<h1>All Passengers listed here:</h1>
<h3>Click on a passenger name to view the passenger details:</h3>

<% if @passengers.length >= 0 %>
  <ul>
    <% @passengers.each do |passenger| %>
      <li>
      <span><%= link_to passenger.name, passenger_path(passenger.id) %></span>
      <span><%= link_to "Rating |" %></span>

        <span><%= link_to "Edit |", edit_passenger_path(passenger.id) %></span>
            <%= link_to('Delete!', delete_passenger_path(passenger.id), {class: 'button', method: :delete, data: {confirm: 'Are you sure?'}, alt: 'delete passenger button'}) %>

     </li>
    <% end %>
  </ul>

<% else %>
  <h3>No passengers in the system!</h3>
<% end %>