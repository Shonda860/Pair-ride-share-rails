<h2 class="title"> Driver Details:</h2>

<p> Driver Name: <%= @driver.name %></p>
<p>Driver ID: <%= @driver.id %>

    <p> Total Earnings: $<%= @driver.driver_total_earnings %><p>  

    <p> Avg Rating:<%= @driver.driver_avg_rating %><p>
    <p>
 <span class="button_to"><%= link_to "Edit Driver", edit_driver_path(@driver.id) %></span>
 <span class="button_to">
 <%= link_to("Delete Driver", driver_path(@driver.id), { class: "button", method: :delete, data: { confirm: "Are you sure?" }, alt: "delete driver button" }) %></span></li>
 

<h2>Driver Trips</h2>
<% if @driver.trips.length > 0 %>
<ul>
  <% @driver.trips.each do |trip| %>
    <li>
    Trip ID:# <%= link_to trip.id, trip_path(trip.id) %>
    Date:  <%= trip.date %>
    Passenger Name: <%= link_to Passenger.find_by(id: trip.passenger_id).name, passenger_path(trip.passenger.id) %>
    Rating:<%= trip.rating %>
    Earnings:$<%= (((trip.cost.to_f / 100) * 0.8) - 1.65).round(2) %>
    <%= link_to "Delete Trip", trip_path(trip.driver.id), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
    </ul>
<% else %>
   <p>No trips for this Driver</p>
<% end %>
<%= link_to "Back to Drivers", drivers_path %> 
<%= link_to "Back to All Passengers", passengers_path %>

