<h2 class="title">Passenger Details:</h2>
	<span class="button_to"><%= link_to "Add New Trip |", new_trip_path %></span>
		<span class="button_to"><%= link_to "Edit Trip |", edit_passenger_path(@passenger.id) %></span>
  		<span class="button_to"><%= link_to "Delete Trip", delete_passenger_path(@passenger.id), method: :delete, data: { confirm: "Are you sure?" } %> </span>

<p>Passenger Name: <%= @passenger.name %></p>
<p>Passenger ID: <%= @passenger.id %></p>
<p>Passenger Phone Number: <%= @passenger.phone_num %></p>
<p>Total Charges: <%= number_to_currency(@passenger.total_charges)%><p>

<h2>Passenger Trips</h2>
<% if @passenger.trips.length > 0 %>
<ul>
  <% @passenger.trips.each do |trip| %>
    <li>
    Trip id: <%= trip.id %>
    Date:  <%= trip.date %>
    Driver Name: <%= link_to Driver.find_by(id: trip.driver_id).name, driver_path(trip.driver.id) %>
    Rating:<%= trip.rating %>
    Total Cost:<%= number_to_currency(trip.cost / 100)%>
    <%= link_to("Delete", passenger_path(@passenger.id), { class: "button", method: :delete, data: { confirm: "Are you sure?" }, alt: "delete passenger button" }) %></li>
  <% end %>
    </ul>
<% else %>
   <p>No trips for this Passenger</p>
<% end %>

<%= link_to "Back to All Passengers", passengers_path %>
