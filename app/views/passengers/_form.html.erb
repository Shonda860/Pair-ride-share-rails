<%= form_with model: @passenger, class: "edit-passenger" do |f| %>
	<p>Please provide the appropriate information:</p>

	<% if @passenger.errors.any? %>
  	<ul>
    	<% @passenger.errors.each do |column, message| %>
        <li>
          <%= column %> <%= message %>
        </li>
      <% end %>
		</ul>
	<% end %> 

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :phone %>
	<%= f.text_field :phone_num %>

	<%= f.submit action_name %>


<% end %>