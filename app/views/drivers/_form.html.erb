
<%= form_with model: @driver, class: "edit-driver" do |f| %>
	<p>Please provide the appropriate information:</p>

	<% if @driver.errors.any? %>
  	<ul>
    	<% @driver.errors.each do |column, message| %>
        <li>
          <%= column %> <%= message %>
        </li>
      <% end %>
		</ul>
	<% end %> 

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :vin %>
	<%= f.text_field :vin %>

  <%= f.label :available %>
	<%= f.text_field :available %>

	<%= f.submit action_name %>


<% end %>